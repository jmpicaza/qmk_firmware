#include QMK_KEYBOARD_H
#include <stdio.h>
// #include "keymap_spanish.h"
// #include "action_layer.h"
// #include "oled.c"

enum layers {
    _QWERTY,
    _MOUSE,
    _SYMBOLS,
    _NUMBERS,
    _LIGTHS,
};

// #include "rgblight.c"
#include "rgbmatrix.c"

// Readability keycodes
#define LOWER   MO(_LOWER)
#define RAISE   MO(_RAISE)

#define ENT_SYM LT(_SYMBOLS, KC_ENT)
#define BKS_SYM LT(_SYMBOLS, KC_BSPC)
#define ENT_NUM LT(_NUMBERS, KC_ENT)
#define F_MOU LT(_MOUSE, KC_F)
#define BKSP_MOU LT(_MOUSE, KC_BSPC)
#define SPACE_NUM LT(_NUMBERS, KC_SPC)
#define SPACE_SYM LT(_SYMBOLS, KC_SPC)
#define DEL_LIG LT(_LIGTHS, KC_DEL)
#define ENT_TIL LT(0,KC_ENT)

enum custom_keycodes { QMKPSWD = SAFE_RANGE, };
bool process_record_user(uint16_t keycode, keyrecord_t *record) {
    switch (keycode) {
    case QMKPSWD:
        if (record->event.pressed) {SEND_STRING("Jamaica$2022\t"); }
        break;
    case ENT_TIL: if (!record->tap.count && record->event.pressed) { tap_code16(KC_QUOT); }
        return true;             // Return true for normal processing of tap keycode
    }
    return true;
};

